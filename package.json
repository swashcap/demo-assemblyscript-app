{
  "name": "demo-assemblyscript-app",
  "version": "1.0.0",
  "description": "A demo of AssemblyScript in web app form.",
  "main": "index.js",
  "repository": "git@github.com:swashcap/demo-assemblyscript-app.git",
  "author": "Cory Reed",
  "license": "Apache-2.0",
  "private": true,
  "dependencies": {
    "@koa/cors": "^3.0.0",
    "hard-rejection": "^2.1.0",
    "koa": "^2.7.0",
    "koa-logger": "^3.2.0",
    "koa-route": "^3.2.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.0.0",
    "@commitlint/config-conventional": "^8.0.0",
    "@types/koa": "^2.0.48",
    "@types/koa-logger": "^3.1.1",
    "@types/koa-route": "^3.2.4",
    "@types/koa__cors": "^2.2.3",
    "assemblyscript": "AssemblyScript/assemblyscript",
    "husky": "^2.4.1",
    "lint-staged": "^8.2.1",
    "prettier": "^1.18.2",
    "typescript": "^3.5.2"
  },
  "scripts": {
    "asbuild": "npm run asbuild:untouched && npm run asbuild:optimized",
    "asbuild:optimized": "asc assembly/index.ts -b build/optimized.wasm -t build/optimized.wat --sourceMap --validate --optimize",
    "asbuild:untouched": "asc assembly/index.ts -b build/untouched.wasm -t build/untouched.wat --sourceMap --validate --debug",
    "build": "tsc --build server",
    "format": "prettier --write '*.{js,json}' '{assembly,server}/**/*.ts'",
    "start": "node server/index.js"
  }
}
